<UserControl x:Class="Scada.Client.SL.Modules.BaseInfo.DeviceManage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myConvertDisplayType="clr-namespace:Scada.Utility.Common.SL;assembly=Scada.Utility.Common.SL"
    
    xmlns:DeviceInfoVM="clr-namespace:Scada.Client.VM.Modules.BaseInfo;assembly=Scada.Client.VM"
    mc:Ignorable="d"
    d:DesignHeight="500" d:DesignWidth="1024" xmlns:my="clr-namespace:Scada.Client.UC;assembly=Scada.Client.UC" 
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             xmlns:my1="clr-namespace:Scada.Client.SL.Controls" DataContext="{Binding}">

    <UserControl.Resources>
        <!--<DeviceInfoVM:DeviceManageViewModel x:Key="deviceInfoVM"/>-->
        <myConvertDisplayType:ConverNumberToDisplayType x:Key="ConverNumberToDisplayType1"/>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White" BindingValidationError="LayoutRoot_BindingValidationError">
        <Border Name="content_Border" BorderBrush="#FF4A91BB" BorderThickness="1" Margin="5" CornerRadius="5">
            <Border.Background>
                <LinearGradientBrush StartPoint=".5,0" EndPoint=".5,1">
                    <GradientStop Color="#FF5BB5E3" Offset="0"/>
                    <GradientStop Color="#FF2C5273" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <TextBlock Text="设备信息管理" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="22,5,0,0" Height="25" FontSize="16" Foreground="White"   TextWrapping="Wrap"  />
                <Border BorderBrush="#FF4A91BB" BorderThickness="1" Margin="10,30,10,20" CornerRadius="5" >
                    <Border.Background>
                        <SolidColorBrush Color="White"/>
                    </Border.Background>

                    <Border BorderThickness="1" CornerRadius="5" Margin="2">
                        <Grid ShowGridLines="True" Background="AliceBlue">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="246"/>
                                <ColumnDefinition Width="313"/>
                                <ColumnDefinition Width="425" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="420"/>
                                <RowDefinition Height="5"/>
                                    <RowDefinition Height="10*" />
                                </Grid.RowDefinitions>
                                <my1:TreeViewList   x:Name="treeViewList1"  OnTreeSelectItemClick="treeViewList1_OnTreeSelectItemClick"/>
                            <sdk:Label Content="设备编号：" HorizontalAlignment="Left" Margin="14,17,0,0" VerticalAlignment="Top" Width="62" Grid.Column="1" />
                                <TextBox Name="txtDeviceNo" DataContext="{Binding Source={StaticResource DeviceInfoList} }" Text="{Binding DeviceInfoList.DeviceNo, Mode=TwoWay, ValidatesOnExceptions=True, NotifyOnValidationError=True}" Height="23" HorizontalAlignment="Left" Margin="86,14,0,0"  VerticalAlignment="Top" Width="204" Grid.Column="1" />
                            <sdk:Label Content="设备SN号：" HorizontalAlignment="Left" Margin="14,44,0,0" VerticalAlignment="Top" Width="62" Grid.Column="1" />
                                <TextBox  Name="txtDeviceSN" Text="{Binding DeviceInfoList.DeviceSN, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="86,40,0,0" VerticalAlignment="Top" Width="204" Grid.Column="1" />
                            <sdk:Label Content="设备MAC：" Grid.Column="1"  HorizontalAlignment="Left" Margin="10,74,0,0" x:Name="label1" VerticalAlignment="Top" Width="62"  />
                                <TextBox x:Name="txtDeviceMac" Text="{Binding DeviceInfoList.DeviceMAC, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="86,68,0,0"  VerticalAlignment="Top" Width="204" Grid.Column="1" />
                            
                            <sdk:Label Content="SIM卡号：" Grid.Column="1"  HorizontalAlignment="Left" Margin="10,97,0,0" x:Name="label2" VerticalAlignment="Top" Width="62"  />
                                <TextBox  x:Name="txtSIM" Text="{Binding DeviceInfoList.SIMNo, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="86,94,0,0" VerticalAlignment="Top" Width="204" Grid.Column="1" />
                                <sdk:Label Content="硬件型号：" HorizontalAlignment="Left" Margin="12,123,0,0" Name="label5" VerticalAlignment="Top" Width="62" Grid.Column="1" />
                                <TextBox Name="txtHardType" Text="{Binding DeviceInfoList.HardType, Mode=TwoWay}"  Height="23" HorizontalAlignment="Left" Margin="86,121,0,0"  VerticalAlignment="Top" Width="204" Grid.Column="1" />
                                <sdk:Label Content="生产日期：" HorizontalAlignment="Left" Margin="12,146,0,0" Name="label6" VerticalAlignment="Top" Width="62" Grid.Column="1" />
                                <sdk:DatePicker Text="{Binding DeviceInfoList.ProductDate, Mode=TwoWay}" Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="86,147,0,0" Name="dpProductDate" VerticalAlignment="Top" Width="204" />
                                <sdk:Label Content="管理分区：" Grid.Column="1"  HorizontalAlignment="Left" Margin="10,178,0,0" x:Name="label3" VerticalAlignment="Top" Width="62"  />
                                <TextBox x:Name="txtManageArea" Text="{Binding DeviceInfoList.ManageAreaName, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="86,176,0,0"  VerticalAlignment="Top" Width="204" IsReadOnly="True" Grid.Column="1" />

                            <sdk:Label Content="安装位置：" Grid.Column="1"  HorizontalAlignment="Left" Margin="10,204,0,0" x:Name="label4" VerticalAlignment="Top" Width="62"  />
                                <TextBox x:Name="txtInstallPlace" Text="{Binding DeviceInfoList.InstallPlace, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="86,202,0,0"  VerticalAlignment="Top" Width="204" Grid.Column="1" />
                                <sdk:Label Content="经      度：" Grid.Column="1"  HorizontalAlignment="Left" Margin="11,234,0,0" VerticalAlignment="Top" Width="62"  />
                                <TextBox x:Name="txtLongitude" Text="{Binding DeviceInfoList.Longitude, Mode=TwoWay}" Height="23" HorizontalAlignment="Right" Margin="0,231,22,0" VerticalAlignment="Top" Width="205" Grid.Column="1" />

                                <sdk:Label Content="维      度：" Grid.Column="1"  HorizontalAlignment="Left" Margin="11,262,0,0" VerticalAlignment="Top" Width="62"  />
                                <TextBox x:Name="txtLatitude" Text="{Binding DeviceInfoList.Latitude, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="86,258,0,0"  VerticalAlignment="Top" Width="205" Grid.Column="1" />

                                <sdk:Label Content="高      度：" Grid.Column="1"  HorizontalAlignment="Left" Margin="9,291,0,0" VerticalAlignment="Top" Width="62"  />
                                <TextBox  x:Name="txtHigh" Text="{Binding DeviceInfoList.High, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="86,286,0,0" VerticalAlignment="Top" Width="205" Grid.Column="1" />
                                <!--<sdk:Label Content="连接方式：" Grid.Column="1"  HorizontalAlignment="Left" Margin="12,312,0,0" VerticalAlignment="Top" Width="62"  />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="86,309,0,0" x:Name="txtConnType" Text="" VerticalAlignment="Top" Width="204" Grid.Column="1" />-->
                                <sdk:Label Content="备      注：" Grid.Column="1"  HorizontalAlignment="Left" Margin="9,316,0,0" VerticalAlignment="Top" Width="62"  />
                                <TextBox x:Name="txtComment" Text="{Binding DeviceInfoList.Comment, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="85,313,0,0"  VerticalAlignment="Top" Width="204" Grid.Column="1" />
                                <sdk:Label Content="时间偏差：" Grid.Column="1"  HorizontalAlignment="Left" Margin="8,344,0,0" VerticalAlignment="Top" Width="62"  />
                                <TextBox x:Name="txtWindage" Text="{Binding DeviceInfoList.Windage, Mode=TwoWay}" Height="23" HorizontalAlignment="Left" Margin="85,341,0,0"  VerticalAlignment="Top" Width="205" Grid.Column="1" />
                                <sdk:Label Content="维护人员：" HorizontalAlignment="Left" Margin="224,304,0,0" VerticalAlignment="Top" Width="62" Grid.Column="2" />
                                <ComboBox Name="cmbMaintenancePeople" ItemsSource="{Binding MaintenancePeopleList,Mode=TwoWay}"  SelectedItem="{Binding SelectedMaintenancePeople, Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="ID" Height="23" HorizontalAlignment="Left" Margin="303,301,0,0"  VerticalAlignment="Top" Width="120" Grid.Column="2" />
                                <sdk:Label Content="硬件版本：" Height="18" x:Name="label33" Width="50" Margin="8,380,255,22" Grid.Column="1" />
                                <TextBox  x:Name="txtHardwareVersion" Text="{Binding DeviceInfoList.HardwareVersion, Mode=TwoWay}" Height="23" Width="48" Margin="85,377,180,20" Grid.Column="1" />
                                <sdk:Label Content="软件版本：" Height="18"  Width="50" Margin="175,381,88,21" Grid.Column="1" />
                                <TextBox Height="23" x:Name="txtSoftVersion" Text="{Binding DeviceInfoList.SoftWareVersion, Mode=TwoWay}" Width="48" Margin="241,377,24,20" Grid.Column="1" />

                                <StackPanel Name="stackPanel11" Orientation="Horizontal" Grid.Column="2" Margin="226,360,13,20" Width="186" Height="30">
                                    <Button Content="增加" Height="23" Name="butAdd" Width="60" Command="{Binding AddCommand}"  />
                                    <Button Content="删除" Height="23" Name="butDel" Width="60" Command="{Binding DeleteCommand}"  />
                                    <Button Content="修改" Height="23" Name="butSave" Width="60" Command="{Binding UpdateCommand}"  />
                                </StackPanel>
                            <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="220,119,0,0" Name="textBlock1" Text="实时模式参数：" VerticalAlignment="Top" />
                                <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="302,115,0,0" Name="txtRealTimeParam" Text="{Binding DeviceInfoList.RealTimeParam, Mode=TwoWay}" VerticalAlignment="Top" Width="120" />
                            <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="220,149,0,0" Name="textBlock2" Text="整点模式参数1：" VerticalAlignment="Top" />
                                <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="302,145,0,0" Name="txtFullTimeParam1" Text="{Binding DeviceInfoList.FullTimeParam1, Mode=TwoWay}" VerticalAlignment="Top" Width="120" />
                            <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="220,180,0,0" Name="textBlock3" Text="整点模式参数2：" VerticalAlignment="Top" />
                                <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="302,178,0,0" Name="txtFullTimeParam2" Text="{Binding DeviceInfoList.FullTimeParam2, Mode=TwoWay}" VerticalAlignment="Top" Width="120" />
                            <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="221,213,0,0" Name="textBlock4" Text="逢变则报参数1:" VerticalAlignment="Top" />
                                <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="302,209,0,0" Name="txtOptimizeParam1" Text="{Binding DeviceInfoList.OptimizeParam1, Mode=TwoWay}" VerticalAlignment="Top" Width="120" />
                            <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="221,239,0,0" Name="textBlock5" Text="逢变则报参数2:" VerticalAlignment="Top" />
                                <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="302,237,0,0" Name="txtOptimizeParam2" Text="{Binding DeviceInfoList.OptimizeParam2, Mode=TwoWay}" VerticalAlignment="Top" Width="120" />
                            <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="222,273,0,0" Name="textBlock6" Text="逢变则报参数3:" VerticalAlignment="Top" />
                                <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="302,269,0,0" Name="txtOptimizeParam3" Text="{Binding DeviceInfoList.OptimizeParam3, Mode=TwoWay}" VerticalAlignment="Top" Width="120" />
                                <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="212,52,0,0" Name="textBlock7" Text="液晶屏显示类型:" VerticalAlignment="Top"  />
                                <ComboBox Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="303,48,0,0" Name="cmbDisplayType"  ItemsSource="{Binding DeviceInfoLcdList, Mode=TwoWay}"  SelectedItem="{Binding SelectedLcdItem, Mode= TwoWay}" DisplayMemberPath="LCDScreenDisplayTypeName" SelectedValuePath="LCDScreenDisplayType" VerticalAlignment="Top" Width="120" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="213,88,0,0" Name="textBlock18" Text="当前选择模式:"  VerticalAlignment="Top" Grid.Column="2" />
                                <ComboBox Height="23" HorizontalAlignment="Left" Margin="302,83,0,0" Name="cmbCurrentModel" ItemsSource="{Binding DeviceInfoCurrentModelList, Mode=TwoWay}"  SelectedItem="{Binding SelectedCurrentModelItem, Mode=TwoWay}" DisplayMemberPath="CurrentModelName" SelectedValuePath="CurrentModel" VerticalAlignment="Top" Width="120" Grid.Column="2" />
                                <CheckBox Name="chkUrgencyBtnEnable" Content="是否启用紧急按钮" IsChecked="{Binding DeviceInfoList.UrgencyBtnEnable, Mode=TwoWay}" Grid.Column="2" Height="16" HorizontalAlignment="Left" Margin="215,14,0,0"  VerticalAlignment="Top" />
                                <CheckBox Name="chkHighTemp1Alarm" Content="主温度报警设置有效" IsChecked="{Binding DeviceInfoList.Temperature1AlarmValid, Mode=TwoWay}" Grid.Column="2" Height="16" HorizontalAlignment="Left" Margin="5,18,0,0"  VerticalAlignment="Top" />
                            <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="0,46,0,0" Name="textBlock8" Text="主温度高报警值:" VerticalAlignment="Top" />
                            <TextBox Name="txtHighTemp1Alarm" Text="{Binding DeviceInfoList.Temperature1HighAlarm, Mode=TwoWay}" Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="106,42,0,0"  VerticalAlignment="Top" Width="97" />
                            <TextBlock Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="0,71,0,0" Name="textBlock9" Text="主温度低报警值:" VerticalAlignment="Top" />
                            <TextBox Name="txtLowTemp1Alarm" Text="{Binding DeviceInfoList.Temperature1LowAlarm, Mode=TwoWay}" Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="106,69,0,0"  VerticalAlignment="Top" Width="97" />
                                <CheckBox Content="从温度报警设置有效" IsChecked="{Binding DeviceInfoList.Temperature2AlarmValid}" Height="16" HorizontalAlignment="Left" Margin="3,101,0,0" Name="chkHighTemp2Alarm" VerticalAlignment="Top" Grid.Column="2" />
                            <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,125,0,0" Name="textBlock10" Text="从温度高报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Name="txtHighTemp2Alarm" Text="{Binding DeviceInfoList.Temperature2HighAlarm}" Height="23" HorizontalAlignment="Left" Margin="106,121,0,0"  VerticalAlignment="Top" Width="97" Grid.Column="2" />
                            <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,150,0,0" Name="textBlock13" Text="从温度低报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="106,148,0,0" Name="txtLowTemp2Alarm" Text="{Binding DeviceInfoList.Temperature2LowAlarm}" VerticalAlignment="Top" Width="97" Grid.Column="2" />
                                <CheckBox Content="湿度报警设置有效" IsChecked="{Binding DeviceInfoList.HumidityAlarmValid}" Height="16" HorizontalAlignment="Left" Margin="0,179,0,0" Name="chkHumidityAlarm" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,205,0,0" Name="textBlock14" Text="湿度高报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="106,201,0,0" Name="txtHumidityHighAlarm" Text="{Binding DeviceInfoList.HumidityHighAlarm}" VerticalAlignment="Top" Width="97" Grid.Column="2" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,230,0,0" Name="textBlock15" Text="湿度低报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="106,228,0,0" Name="txtHumidityLowAlarm" Text="{Binding DeviceInfoList.HumidityLowAlarm}" VerticalAlignment="Top" Width="97" Grid.Column="2" />
                                <CheckBox Content="信号报警设置有效" IsChecked="{Binding DeviceInfoList.SignalAlarmValid}" Height="16" HorizontalAlignment="Left" Margin="0,263,0,0" Name="chkSignalAlarm" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,285,0,0" Name="textBlock11" Text="信号高报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="106,281,0,0" Name="txtSignalHighAlarm" Text="{Binding DeviceInfoList.SignalHighAlarm}" VerticalAlignment="Top" Width="97" Grid.Column="2" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,310,0,0" Name="textBlock12" Text="信号低报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="106,308,0,0" Name="txtSignalLowAlarm" Text="{Binding DeviceInfoList.SignalLowAlarm}" VerticalAlignment="Top" Width="97" Grid.Column="2" />
                                <CheckBox Content="电量报警设置有效"  IsChecked="{Binding DeviceInfoList.ElectricityAlarmValid}" Height="16" HorizontalAlignment="Left" Margin="1,341,0,0" Name="chkElectricityAlarm" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,364,0,0" Name="textBlock16" Text="电量高报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="106,360,0,0" Name="txtElectricityHighAlarm" Text="{Binding DeviceInfoList.ElectricityHighAlarm}" VerticalAlignment="Top" Width="97" Grid.Column="2" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,389,0,0" Name="textBlock17" Text="电量低报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="106,387,0,0" Name="txtElectricityLowAlarm" Text="{Binding DeviceInfoList.ElectricityLowAlarm}" VerticalAlignment="Top" Width="97" Grid.Column="2" />
                            </Grid>
                    </Border>
                </Border>
            </Grid>
            </ScrollViewer>
        </Border>
    </Grid>

</UserControl>

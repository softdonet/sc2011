                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="0,442,0,0" Name="textBlock17" Text="电量低报警值:" VerticalAlignment="Top" Grid.Column="2" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="106,440,0,0" Name="txtElectricityLowAlarm" VerticalAlignment="Top" Width="97" Grid.Column="2" />
                                <ComboBox Height="23" HorizontalAlignment="Left" Margin="296,50,0,0" Name="cmbCurrentModel" VerticalAlignment="Top" Width="120" Grid.Column="2" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="213,55,0,0" Name="textBlock18" Text="当前选择模式:" VerticalAlignment="Top" Grid.Column="2" />
                            </Grid>
                    </Border>
                </Border>
            </Grid>
            </ScrollViewer>
        </Border>
    </Grid>

</UserControl>

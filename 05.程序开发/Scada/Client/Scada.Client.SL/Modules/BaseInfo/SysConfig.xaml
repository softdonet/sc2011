                                <TextBox Height="23" HorizontalAlignment="Left" Margin="128,78,0,0" Name="textBox3" VerticalAlignment="Top" Width="120" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="28,110,0,0" Name="textBlock4" Text="设备默认DNS:" VerticalAlignment="Top" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="128,110,0,0" Name="textBox4" VerticalAlignment="Top" Width="120" />
                                <Button Content="保存" Height="23" HorizontalAlignment="Left" Margin="30,157,0,0" Name="button1" VerticalAlignment="Top" Width="75" />
                                <Button Content="关闭" Height="23" HorizontalAlignment="Left" Margin="155,157,0,0" Name="button2" VerticalAlignment="Top" Width="75" />
                            </Grid>
                            <Grid Height="196" Width="294"  Background="LightSteelBlue" ShowGridLines="True" HorizontalAlignment="Left" Margin="372,23,0,0" Name="grid2" VerticalAlignment="Top">
                                <TextBlock HorizontalAlignment="Left" Margin="33,18,0,0" Name="textBlock5" Text="主机IP:" Height="23" VerticalAlignment="Top" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="127,15,0,0" Name="textBox5" VerticalAlignment="Top" Width="120" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="33,42,0,0" Name="textBlock6" Text="备用IP：" VerticalAlignment="Top" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="127,39,0,0" Name="textBox6" VerticalAlignment="Top" Width="120" />
                                <TextBlock HorizontalAlignment="Left" Margin="33,69,0,0" Name="textBlock7" Text="域   名：" Height="23" VerticalAlignment="Top" />

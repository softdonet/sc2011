                            <TextBox Height="23" HorizontalAlignment="Left" Margin="86,68,0,0" x:Name="txtDeviceMac" VerticalAlignment="Top" Width="204" Grid.Column="1" />
                            
                            <sdk:Label Content="SIM卡号：" Grid.Column="1"  HorizontalAlignment="Left" Margin="10,97,0,0" x:Name="label2" VerticalAlignment="Top" Width="62"  />

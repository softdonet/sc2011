                                <TextBlock HorizontalAlignment="Left" Margin="27,115,0,0" Name="textBlock9" Text="连接方式：" Height="23" VerticalAlignment="Top" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="127,111,0,0" Name="textBox9" VerticalAlignment="Top" Width="120" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="127,137,0,0" Name="textBox10" VerticalAlignment="Top" Width="120" />
                                <TextBlock Height="23" HorizontalAlignment="Left" Margin="27,141,0,0" Name="textBlock10" Text="连接方式：" VerticalAlignment="Top" />
                                <Button Content="保存" Height="23" HorizontalAlignment="Left" Margin="50,170,0,0" Name="button3" VerticalAlignment="Top" Width="75" />
                                <Button Content="关闭" Height="23" HorizontalAlignment="Left" Margin="156,169,0,0" Name="button4" VerticalAlignment="Top" Width="75" />
                            </Grid>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Border>
    </Grid>

</UserControl>

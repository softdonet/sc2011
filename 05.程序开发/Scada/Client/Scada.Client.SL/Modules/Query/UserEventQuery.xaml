<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="Scada.Client.SL.Modules.Query.UserEventQuery"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
     xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"   
             
    xmlns:my="clr-namespace:Scada.Client.SL.Controls"
    xmlns:myConvertAlarm="clr-namespace:Scada.Utility.Common.SL;assembly=Scada.Utility.Common.SL"

    d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <myConvertAlarm:ConverNumberToTextAlarm  x:Key="ConverNumberToTextAlarm1"/>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="719*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <sdk:Label Content="设备名称:"  Height="28"   Name="label1" Width="50" />
            <my:ComboBoxTreeView x:Name="comboBoxTreeView1" Width="120" Height="28"     SelectValue="{Binding SelectDeviceTreeNode,  Mode=TwoWay}"/>

            <sdk:Label Content="开始时间:"  Margin="20,0,0,0" Height="28"  Name="lblSat" Width="50"  />
            <sdk:DatePicker Height="23"   Name="datePicker1"  Width="120" />
            <sdk:Label Content="结束时间:" Margin="20,0,0,0" Height="28"   Name="lblEnd" Width="50"   />
            <sdk:DatePicker  Height="23"  Name="datePicker2"  Width="120" />
            <Button Content="查询" Margin="20,0,0,0" Height="23" Name="btnCheck"  Width="75" Command="{Binding queryCommand}" />
            <!--<Button Content="导出" Margin="20,0,0,0"  Height="23" Name="btnExport"  Width="75" />-->
        </StackPanel>
        <telerik:RadGridView x:Name="RadGridView1" Grid.Row="1"   ShowGroupPanel="False" IsReadOnly="True"   CanUserFreezeColumns="False" AutoGenerateColumns="False" >
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="编号" DataMemberBinding="{Binding ID}" Width="80"  HeaderTextAlignment="Center"  />
                <telerik:GridViewDataColumn Header="用户事件ID" DataMemberBinding="{Binding ID}" Width="100" HeaderTextAlignment="Center"  />
                <telerik:GridViewDataColumn Header="设备编号" DataMemberBinding="{Binding DeviceNo}" Width="100"   HeaderTextAlignment="Center"/>
                <telerik:GridViewDataColumn Header="请求时间" DataMemberBinding="{Binding StartTime}" Width="140" HeaderTextAlignment="Center"/>
                <telerik:GridViewDataColumn Header="用户请求次数" DataMemberBinding="{Binding EventLevel}" Width="60" HeaderTextAlignment="Center"/>
                <telerik:GridViewDataColumn Header="步骤1" DataMemberBinding="{Binding EventLevel}" Width="100" HeaderTextAlignment="Center"/>
                <telerik:GridViewDataColumn Header="步骤2" DataMemberBinding="{Binding EventLevel}" Width="100" HeaderTextAlignment="Center"/>
                <telerik:GridViewDataColumn Header="步骤3" DataMemberBinding="{Binding EventLevel}" Width="100" HeaderTextAlignment="Center"/>
                <telerik:GridViewDataColumn Header="步骤4" DataMemberBinding="{Binding EventLevel}" Width="100" HeaderTextAlignment="Center"/>
                <telerik:GridViewDataColumn Header="步骤5" DataMemberBinding="{Binding EventLevel}" Width="100" HeaderTextAlignment="Center"/>

            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

    </Grid>
</UserControl>
